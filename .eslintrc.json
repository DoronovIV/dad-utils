{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "eslint:recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 15,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint"],
  "rules": {
    "semi": [1, "always"],
    "react/react-in-jsx-scope": "off",
    "space-before-function-paren": 0
  },
  "ignorePatterns": ["*.json", "*.md", ".*/", "*config*"],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
